<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Add Product</title>
  <style>
    .cont {
      background-color: rgb(203, 226, 226);
      width: 700px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }
    #nm {
      width: 500px;
      color: rgb(21, 20, 20);
    }
    .wrp {
      display: flex;
      justify-content: center;
      align-items: center;
      
    }
    .error-msg {
      color: white;
      background-color:red;
      margin-bottom: 10px;
      font-weight: bold;
      border-radius: 5px;
    }
   .form-group{
    width: 90%;
   }
   .form-groups{
    width: 40%;
    color:bisque;
   }
   
  </style>
</head>
<body>
  <%- include("home.ejs") %>

  <div class="wrp">
    <form id="fr" action="/addProd" method="post" onsubmit="return validateForm()">
      <div class="cont mt-5 p-5">
        
        <!-- Error message placeholder -->
        <div id="error" class="error-msg"></div>

        <div class="form-group">
          <input type="text" name="name" id="name" class="form-control control" placeholder="Enter Name" />
        </div>
        <div class="form-group">
          <input type="text" name="category" id="category" class="form-control control" placeholder="Enter Category" />
        </div>
        <div class="form-group">
          <input type="text" name="price" id="price" class="form-control control" placeholder="Enter Price" />
        </div>
        <div class="form-group">
          <input type="text" name="quantity" id="quantity" class="form-control control" placeholder="Enter Quantity" />
        </div>
        
        <div class="form-groups">
          <input type="submit" class="form-control bg-primary" value="Add Product" />
        </div>

        <% if (msg.length != 0) { %>
          <div class="form-control btn-success">
            <%= msg %>
          </div>
        <% } %>

      </div>
    </form>
  </div>

  <script>
    function validateForm() {
      const name = document.getElementById("name").value.trim();
      const category = document.getElementById("category").value.trim();
      const price = document.getElementById("price").value.trim();
      const quantity = document.getElementById("quantity").value.trim();
      const errorDiv = document.getElementById("error");

      if (!name || !category || !price || !quantity) {
        errorDiv.textContent = "fill the all data comparsory........ ?";
        return false; 
      }
      return true;
    }
  </script>
</body>
</html>
